
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for users collection and sub-collections
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Kana data is readable by any signed-in user, but not writable by anyone
    // to protect the integrity of this shared data.
    match /hiragana/{kanaId} { 
      allow read: if isSignedIn();
      allow write: if false; 
    }
    match /katakana/{kanaId} { 
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}
