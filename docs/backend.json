{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "appName": {
          "type": "string",
          "description": "The custom name for the application/website."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "profileImage": {
          "type": "string",
          "description": "URL of the user's profile image."
        },
        "personalInfo": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "value": { "type": "string" },
              "icon": { "type": "string" }
            },
            "required": ["label", "value"]
          }
        },
        "orbitInfo": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "icon": { "type": "string" },
              "title": { "type": "string" },
              "content": { "type": "string" },
              "type": { "type": "string" },
              "backgroundImage": { "type": "string" },
              "youtubeVideoId": { "type": "string" }
            },
            "required": ["id", "icon", "title", "content"]
          }
        },
        "github": {
          "type": "string",
          "description": "URL of the user's GitHub profile."
        },
        "instagram": {
          "type": "string",
          "description": "URL of the user's Instagram profile."
        },
        "facebook": {
          "type": "string",
          "description": "URL of the user's Facebook profile."
        },
        "email": {
          "type": "string",
          "description": "The user's email address."
        },
         "cvUrl": {
          "type": "string",
          "description": "URL to the user's CV/Resume file."
        },
        "homeHeroImage": {
            "type": "string",
            "description": "URL of the hero image for the home page."
        },
        "aboutHeroImage": {
            "type": "string",
            "description": "URL of the hero image for the about page."
        },
        "toolsHeroImage": {
            "type": "string",
            "description": "URL of the hero image for the tools page."
        }
      },
      "required": ["name", "bio"]
    },
     "GeneratedWord": {
      "title": "Generated Word",
      "description": "Represents a single word generated by the AI from raw text.",
      "type": "object",
      "properties": {
        "word": { "type": "string" },
        "translation": { "type": "string" },
        "definition": { "type": "string" }
      },
      "required": ["word", "translation"]
    },
    "Education": {
      "title": "Education",
      "description": "Represents an education entry in the portfolio.",
      "type": "object",
      "properties": {
        "degree": { "type": "string" },
        "school": { "type": "string" },
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" },
        "score": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["degree", "school", "startDate", "endDate", "createdAt"]
    },
    "Hobby": {
      "title": "Hobby",
      "description": "Represents a user's hobby.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string" },
        "imageHint": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "description", "image", "imageHint"]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project in the portfolio.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "technologies": { "type": "array", "items": { "type": "string" } },
        "category": { "type": "string" },
        "link": { "type": "string" },
        "live": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "description", "technologies", "category", "createdAt"]
    },
    "Skill": {
      "title": "Skill",
      "description": "Represents a skill category and a list of skills within it.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "icon": { "type": "string" },
        "items": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "icon", "items", "createdAt"]
    },
     "Note": {
      "title": "Note",
      "description": "Represents a single note, similar to a Notion page.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string", "description": "The main content of the note, in Markdown format." },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "createdAt", "updatedAt"]
    },
    "Todo": {
      "title": "Todo",
      "description": "Represents a single todo item.",
      "type": "object",
      "properties": {
        "task": {
          "type": "string",
          "description": "The content of the todo task."
        },
        "completed": {
          "type": "boolean",
          "description": "Whether the todo task is completed."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["task", "completed", "createdAt"]
    },
    "Exercise": {
      "title": "Exercise",
      "description": "Represents a fitness exercise.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "category": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "category", "createdAt"]
    },
    "WorkoutLog": {
      "title": "Workout Log",
      "description": "Represents a single workout session log.",
      "type": "object",
      "properties": {
        "exerciseId": { "type": "string" },
        "exerciseName": { "type": "string" },
        "duration": { "type": "number", "description": "Duration in minutes" },
        "repetitions": { "type": "number" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["exerciseId", "exerciseName", "date"]
    },
    "EnglishWord": {
      "title": "English Word",
      "type": "object",
      "properties": {
        "word": { "type": "string" },
        "translation": { "type": "string" },
        "definition": { "type": "string" },
        "memorized": { "type": "boolean" },
        "favorite": { "type": "boolean" }
      },
      "required": ["word", "translation"]
    },
    "JapaneseWord": {
      "title": "Japanese Word",
      "type": "object",
      "properties": {
        "word": { "type": "string" },
        "romaji": { "type": "string" },
        "meaning": { "type": "string" },
        "memorized": { "type": "boolean" },
        "favorite": { "type": "boolean" }
      },
      "required": ["word", "romaji", "meaning"]
    },
     "GrammarRule": {
      "title": "Grammar Rule",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string" },
        "introduction": { "type": "string" },
        "usage": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": { "type": "string" },
              "example": { "type": "string" }
            },
            "required": ["condition", "example"]
          }
        },
        "form": {
          "type": "object",
          "properties": {
            "regular": { "type": "string" },
            "irregular": { "type": "string" }
          },
          "required": ["regular", "irregular"]
        },
        "structure": {
          "type": "object",
          "properties": {
            "positive": { "$ref": "#/entities/GrammarRuleStructureDetail" },
            "negative": { "$ref": "#/entities/GrammarRuleStructureDetail" },
            "question": { "$ref": "#/entities/GrammarRuleStructureDetail" }
          },
          "required": ["positive", "negative", "question"]
        },
        "timeExpressions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "word": { "type": "string" },
              "translation": { "type": "string" }
            },
            "required": ["word", "translation"]
          }
        },
        "practice": {
          "type": "array",
          "items": {
            "$ref": "#/entities/GrammarPracticeQuestion"
          }
        }
      },
      "required": ["title", "category", "introduction", "usage", "form", "structure", "timeExpressions", "practice"]
    },
    "GrammarRuleStructureDetail": {
      "title": "Grammar Rule Structure Detail",
      "type": "object",
      "properties": {
        "formula": { "type": "string" },
        "examples": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["formula", "examples"]
    },
    "GrammarPracticeQuestion": {
      "title": "Grammar Practice Question",
      "type": "object",
      "properties": {
        "question": { "type": "string" },
        "options": { "type": "array", "items": { "type": "string" } },
        "correctAnswer": { "type": "string" },
        "explanation": { "type": "string" }
      },
      "required": ["question", "options", "correctAnswer", "explanation"]
    },
    "ReadingMaterial": {
      "title": "Reading Material",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" },
        "source": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "content", "createdAt"]
    },
     "ReadingNote": {
      "title": "Reading Note",
      "description": "A note associated with a specific piece of reading material.",
      "type": "object",
      "properties": {
        "readingMaterialId": { "type": "string" },
        "selectedText": { "type": "string" },
        "note": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["readingMaterialId", "selectedText", "note", "createdAt"]
    },
    "Kana": {
      "title": "Kana",
      "type": "object",
      "properties": {
        "character": { "type": "string" },
        "romaji": { "type": "string" }
      },
      "required": ["character", "romaji"]
    },
    "ProgrammingConcept": {
      "title": "Programming Concept",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "emoji": { "type": "string" },
        "explanation": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "emoji", "explanation", "createdAt"]
    },
    "CheatSheetItem": {
      "title": "Cheat Sheet Item",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "snippet": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "snippet", "createdAt"]
    },
     "Chapter": {
      "title": "Chapter",
      "description": "A chapter within a programming language workspace.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "order": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "order", "createdAt"]
    },
    "ProgressItem": {
      "title": "Progress Item",
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "learned": { "type": "boolean" },
        "practicing": { "type": "boolean" }
      },
      "required": ["label", "learned", "practicing"]
    },
    "MemorizedKana": {
        "title": "Memorized Kana",
        "type": "object",
        "properties": {
            "characters": { "type": "array", "items": { "type": "string" } }
        }
    },
    "ProgrammingProgress": {
        "title": "Programming Progress",
        "type": "object",
        "properties": {
            "items": { "type": "object" }
        }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
     "/users/{userId}/education/{educationId}": {
      "schema": { "$ref": "#/entities/Education" },
      "description": "Stores user education history."
    },
     "/users/{userId}/hobbies/{hobbyId}": {
      "schema": { "$ref": "#/entities/Hobby" },
      "description": "Stores user hobbies."
    },
    "/users/{userId}/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores user projects."
    },
    "/users/{userId}/skills/{skillId}": {
      "schema": { "$ref": "#/entities/Skill" },
      "description": "Stores user skills."
    },
     "/users/{userId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/Note" },
      "description": "Stores user notes."
    },
    "/users/{userId}/fitnessExercises/{exerciseId}": {
      "schema": { "$ref": "#/entities/Exercise" },
      "description": "Stores user's custom fitness exercises."
    },
    "/users/{userId}/workoutLogs/{logId}": {
      "schema": { "$ref": "#/entities/WorkoutLog" },
      "description": "Stores user's workout logs."
    },
     "/users/{userId}/englishWords/{wordId}": {
      "schema": { "$ref": "#/entities/EnglishWord" }
    },
    "/users/{userId}/japaneseWords/{wordId}": {
      "schema": { "$ref": "#/entities/JapaneseWord" }
    },
     "/users/{userId}/memorized/{kanaType}": {
      "schema": { "$ref": "#/entities/MemorizedKana" }
    },
    "/users/{userId}/progress/{progressType}": {
      "schema": { "$ref": "#/entities/ProgrammingProgress" }
    },
    "/users/{userId}/englishGrammar/{ruleId}": {
      "schema": { "$ref": "#/entities/GrammarRule" }
    },
    "/users/{userId}/japaneseGrammar/{ruleId}": {
      "schema": { "$ref": "#/entities/GrammarRule" }
    },
    "/users/{userId}/englishReading/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/englishReading/{materialId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/ReadingNote" }
    },
    "/users/{userId}/englishListening/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/englishSpeaking/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/englishWriting/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/japaneseReading/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/japaneseListening/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/japaneseSpeaking/{materialId}": {
      "schema": { "$ref": "#/entities/ReadingMaterial" }
    },
    "/users/{userId}/languages/{langId}/chapters/{chapterId}": {
      "schema": { "$ref": "#/entities/Chapter" }
    },
     "/users/{userId}/languages/{langId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/Note" }
    },
     "/users/{userId}/languages/{langId}/concepts/{conceptId}": {
      "schema": { "$ref": "#/entities/ProgrammingConcept" }
    },
    "/users/userId/languages/{langId}/snippets/{snippetId}": {
      "schema": { "$ref": "#/entities/CheatSheetItem" }
    },
    "/hiragana/{kanaId}": { "schema": { "$ref": "#/entities/Kana" } },
    "/katakana/{kanaId}": { "schema": { "$ref": "#/entities/Kana" } }
  }
}
